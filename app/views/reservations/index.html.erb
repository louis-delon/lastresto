<section class="container">

  <h1>Mes réservations</h1> <br><br><br>

  <% @reservations.each do |reservation| %>

    <div class=" col-xs-12 col-sm-6 col-md-4">
      <div class="panel h-400 with-overlay p-30 d-flex justify-content-center">

        <div class="align-self-end">
          <%= image_tag(reservation.offer.image, size: "253x264") %>
          <h3><%= reservation.offer.seller.name %></h3>
          <p><%= reservation.offer.title %></p>
          <p><%= reservation.offer.price %> euros (<%= reservation.offer.date %>)</p>
          <p>Vous êtes attendus à <%= reservation.time %> heures</p>

        </div>

      </div>
    </div>
  <% end %>

<br>

<%= link_to "retour", buyer_path(@buyer) %>

</section>





